<% layout("/layouts/boilerplate.ejs") %>

<style>
    #filters{
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }
    .filter{
        text-align: center;
        margin-left: 1rem;
        margin-right: 1rem;
        margin-top: 2rem;
        opacity: 0.7;
        cursor: pointer;
    }
    .filter:hover{
        opacity: 1;
    }
    .filter p{
        font-size: 0.8rem;
    }
    .tax-toggle{
        border:1px solid black;
        border-radius: 1rem;
        height: 3rem;
        display: flex;
        align-items: center;
        padding: 1rem;
        margin-left: 4rem;
    }
    #filters-filter{
        display: flex;
        align-items: center;
        justify-content: space-around;
    }

    @media (max-width:995px){
        #filters{
            display: flex;
            flex-wrap: nowrap;
            overflow: scroll;
        }

        #filter-btn{
            display: none;
        }
        .filter-outer-btn{
            margin-left: 1rem;
        }
    }
</style>
<body>
    <div id="filters-filter">
        <div id="filters">
            <a class="filter" href="/listings/category/trending">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </a>
            <a class="filter" href="/listings/category/rooms">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </a>
            <a class="filter" href="/listings/category/iconic_cities">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <p>Iconic Cities</p>
            </a>
            <a class="filter"  href="/listings/category/mountains">
                <div><i class="fa-solid fa-mountain"></i></div>
                <p>Mountains</p>
            </a>
            <a class="filter"  href="/listings/category/artic">
                <div><i class="fa-solid fa-person-skiing"></i></div>
                <p>Artic</p>
            </a>
            <a class="filter"  href="/listings/category/castles">
                <div><i class="fa-brands fa-fort-awesome"></i></div>
                <p>Castles</p>
            </a>
            <a class="filter"  href="/listings/category/beaches">
                <div><i class="fa-solid fa-umbrella-beach"></i></div>
                <p>Beaches</p>
            </a>
            <a class="filter"  href="/listings/category/camping">
                <div><i class="fa-solid fa-campground"></i></div>
                <p>Camping</p>
            </a>
            <a class="filter"  href="/listings/category/farms">
                <div><i class="fa-solid fa-tractor"></i></div>
                <p>Farms</p>
            </a>
        </div>
        <div >
                <button  type="button" class="btn btn-secondary filter-outer-btn"><span id="filter-btn">Filter&nbsp;&nbsp; </span> <i class="fa-solid fa-sliders"></i></button>
        </div>
    </div>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <%for(let listings of allListings){%>
                <a href="/listings/<%=listings._id %>">
                    <div class="card col listing-card" >
                        <img src="<%=listings.image.url %>" class="card-img-top card-img" alt="listing-image" style="height: 20rem;">
                        <div class="card-img-overlay"></div>
                        <div class="card-body listing-body">
                            <p class="card-text">
                                <b><%=listings.title %></b><br>
                                &#8377; <%= listings.price.toLocaleString("en-IN") %>/ night
                            </p>
                        </div>
                    </div>
                </a>
                <%}%>    
        </div>
</body>
